{
  "name": "@gilbarbara/react-range-slider",
  "version": "0.4.4",
  "description": "A range slider component for React",
  "author": "Gil Barbara <gilbarbara@gmail.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/gilbarbara/react-range-slider.git"
  },
  "bugs": {
    "url": "https://github.com/gilbarbara/react-range-slider/issues"
  },
  "homepage": "https://github.com/gilbarbara/react-range-slider",
  "keywords": [
    "react",
    "react-component",
    "input",
    "range",
    "slider"
  ],
  "license": "MIT",
  "main": "lib/index.js",
  "files": [
    "lib"
  ],
  "types": "lib/index.d.ts",
  "peerDependencies": {
    "react": "^15.0.0 || ^16.0.0",
    "react-dom": "^15.0.0 || ^16.0.0"
  },
  "dependencies": {
    "blacklist": "^1.1.4",
    "deepmerge": "^4.0.0"
  },
  "devDependencies": {
    "@types/exenv": "^1.2.0",
    "@types/node": "^12.6.2",
    "@types/enzyme": "^3.10.3",
    "@types/enzyme-adapter-react-16": "^1.0.5",
    "@types/jest": "^24.0.18",
    "@types/once": "^1.4.0",
    "@types/react": "^16.8.23",
    "@types/react-dom": "^16.8.4",
    "bundlesize": "^0.18.0",
    "chalk": "^2.4.2",
    "cross-env": "^5.2.0",
    "enzyme": "^3.10.0",
    "enzyme-adapter-react-16": "^1.14.0",
    "exenv": "^1.2.2",
    "husky": "^3.0.0",
    "is-ci-cli": "^1.1.1",
    "jest": "^24.8.0",
    "jest-chain": "^1.1.2",
    "jest-enzyme": "^7.0.2",
    "jest-extended": "^0.11.2",
    "jest-watch-typeahead": "^0.3.1",
    "node-fetch": "^2.6.0",
    "nodemon": "^1.19.1",
    "prettier": "^1.18.2",
    "react": "^16.8.3",
    "react-addons-test-utils": "^15.6.2",
    "react-dom": "^16.8.3",
    "react-test-renderer": "^16.8.6",
    "rimraf": "^2.6.3",
    "serve": "^11.1.0",
    "start-server-and-test": "^1.9.1",
    "styled-components": "^4.3.2",
    "ts-jest": "^24.0.2",
    "tslint": "^5.18.0",
    "tslint-config-prettier": "^1.18.0",
    "tslint-react": "^4.0.0",
    "typescript": "^3.5.3",
    "yargs": "^13.2.4"
  },
  "scripts": {
    "build": "npm run clean && npm run build:ts",
    "build:ts": "tsc --outDir lib",
    "watch": "npm run build:ts -- -w",
    "clean": "rimraf lib",
    "test": "is-ci \"test:coverage\" \"test:watch\"",
    "test:coverage": "jest --bail --coverage",
    "test:watch": "jest --watch --verbose",
    "lint": "tslint 'src/**/*.ts?(x)' 'test/**/*.ts?(x)'",
    "format": "prettier \"**/*.{js,jsx,json,yml,yaml,css,less,scss,ts,tsx,md,graphql,mdx}\" --write",
    "validate": "npm run lint && npm run test:coverage && npm run build && npm run bundlesize",
    "bundlesize": "bundlesize",
    "prepublishOnly": "npm run validate"
  },
  "browserslist": [
    "> 0.2%",
    "safari >= 9",
    "ios >= 9"
  ],
  "prettier": {
    "jsxBracketSameLine": false,
    "printWidth": 100,
    "singleQuote": true,
    "trailingComma": "all"
  },
  "bundlesize": [
    {
      "path": "./lib/index.js",
      "maxSize": "5 kB"
    }
  ],
  "husky": {
    "hooks": {
      "post-merge": "node tools update",
      "pre-commit": "node tools has-commits && npm run validate"
    }
  }
}
